generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String    @unique
  hash      String
  createdAt DateTime @default(now()) @db.Timestamp(6)
}

model links{
  id        Int      @id @default(autoincrement())
  url       String   @unique
  shortId   String   @unique
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt
}
